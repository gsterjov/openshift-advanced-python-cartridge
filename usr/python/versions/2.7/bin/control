#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH
source "${OPENSHIFT_ADVANCED_PYTHON_DIR}/usr/python/versions/${OPENSHIFT_ADVANCED_PYTHON_VERSION}/lib/create-virtenv"


if [ ! -z "$OPENSHIFT_PYTHON_SERVER" ]; then
    echo "wsgiref" > $OPENSHIFT_HOMEDIR/.env/user_vars/OPENSHIFT_PYTHON_SERVER
    export OPENSHIFT_PYTHON_SERVER="wsgiref"
fi


function start_wsgiref() {
    nohup python usr/python/versions/2.7/servers/wsgiref_server.py > "$OPENSHIFT_ADVANCED_PYTHON_DIR/logs/appserver.log" 2>&1 &
    echo $! > $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.pid
}

function start_gevent() {
    nohup python usr/python/versions/2.7/servers/gevent_server.py > "$OPENSHIFT_ADVANCED_PYTHON_DIR/logs/appserver.log" 2>&1 &
    echo $! > $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.pid
}

function start_gunicorn() {
    nohup gunicorn -c $OPENSHIFT_ADVANCED_PYTHON_DIR/conf/gunicorn.py app:application > "$OPENSHIFT_ADVANCED_PYTHON_DIR/logs/appserver.log" 2>&1
}


function start() {
    echo "Starting PYTHON cart"

    echo "Activating virtenv"
    activate-virtenv

    # app servers have changed
    if [ "$OPENSHIFT_PYTHON_SERVER" -ne "$OPENSHIFT_PYTHON_RUNNING_SERVER" ]; then
        build_server
    fi

    export PYTHONPATH=$PYTHONPATH:$OPENSHIFT_REPO_DIR

    case "$OPENSHIFT_PYTHON_SERVER" in
        wsgiref)
            start_wsgiref
            ;;
        gevent)
            start_gevent
            ;;
        gunicorn)
            start_gunicorn
            ;;
    esac
}


function stop() {
    echo "Stopping PYTHON cart"

    if [ -s $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.pid ]
    then
        kpid=$(cat $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.pid)
        iters=0
        while kill $kpid >/dev/null 2>&1
        do
            iters=$(($iters + 1))
            [ $iters -gt 10 ] && break
            sleep 1
        done
        kill -KILL $kpid >/dev/null 2>&1 || :
        rm -f $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.pid

        if [ -f $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.sock ]; then
            rm -f $OPENSHIFT_ADVANCED_PYTHON_DIR/run/appserver.sock
        fi
    fi
}


function restart() {
    echo "Restarting PYTHON cart"
    stop
    start
}

function status() {
    res=0
    output=$(curl -s -m 30 http://$OPENSHIFT_ADVANCED_PYTHON_IP:$OPENSHIFT_ADVANCED_PYTHON_PORT/ &> /dev/null) || res=1

    if [ $res -eq 0 ]
    then
        client_result "Application is running"
        client_result "$output"
    else
        client_result "Application is either stopped or inaccessible"
    fi
}

function reload() {
    echo "Reloading PYTHON cart"
    restart
}

# Clean up any log files
function tidy() {
  client_message "Emptying python logs in: $OPENSHIFT_ADVANCED_PYTHON_DIR/logs"
  rm logs/appserver.log
  rm logs/appserver.*.log
}


# install the selected server
function build_server() {
    case "$OPENSHIFT_PYTHON_SERVER" in
        gevent)
            pip install gevent
            ;;
        gunicorn)
            pip install gevent
            pip install gunicorn
            ;;
    esac

    echo $OPENSHIFT_PYTHON_SERVER > env/OPENSHIFT_PYTHON_RUNNING_SERVER
    export OPENSHIFT_PYTHON_RUNNING_SERVER=$OPENSHIFT_PYTHON_SERVER
}


function build() {
    if [ -n "$OPENSHIFT_PYPI_MIRROR_URL" ]; then
        m=$OPENSHIFT_PYPI_MIRROR_URL
        if curl -m 15 -f -s "$m" &>/dev/null
        then
            OPENSHIFT_PYTHON_MIRROR="-i $m"
        fi
    fi

    if force_clean_build_enabled_for_latest_deployment; then
        echo "Force-clean builds are enabled" 1>&2
        rm -rf $VIRTUAL_ENV/*
    fi

    if [ ! -f $VIRTUAL_ENV/bin/python ]; then
      echo "Recreating virtenv" 1>&2
      create-virtenv
    fi

    echo "Activating virtenv"
    activate-virtenv

    build_server

    if [ -f ${OPENSHIFT_REPO_DIR}/requirements.txt ]
    then
        ( cd $OPENSHIFT_REPO_DIR; pip install -r ${OPENSHIFT_REPO_DIR}/requirements.txt $OPENSHIFT_PYTHON_MIRROR )
    fi

    if [ -f ${OPENSHIFT_REPO_DIR}/setup.py ]
    then
        ( cd $OPENSHIFT_REPO_DIR; python ${OPENSHIFT_REPO_DIR}/setup.py develop $OPENSHIFT_PYTHON_MIRROR )
    fi

    relative-virtenv
}

function deploy() {
    relative-virtenv
    activate-virtenv
}

case "$1" in
  start)     start ;;
  stop)      stop ;;
  restart)   restart ;;
  status)    status ;;
  reload)    reload ;;
  tidy)      tidy ;;
  build)     build ;;
  deploy)    deploy ;;
  *)         exit 0
esac
